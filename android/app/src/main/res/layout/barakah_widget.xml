<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="8dp"
    android:layout_margin="8dp">

    <!-- Header / Prayer -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#16a34a"
        android:padding="8dp"
        android:gravity="center">
        
        <TextView
            android:id="@+id/next_prayer_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="الصلاة القادمة"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/next_prayer_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="--:--"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Tasks List -->
    <LinearLayout
        android:id="@+id/widget_tasks_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="8dp">
        
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="المهام القادمة:"
            android:textSize="10sp"
            android:textColor="#666666" 
            android:layout_marginBottom="4dp"/>

        <TextView
            android:id="@+id/widget_task_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="لا توجد مهام"
            android:textSize="12sp"
            android:textColor="#333333"
            android:maxLines="4"
            android:ellipsize="end"/>
    </LinearLayout>
</LinearLayout>
